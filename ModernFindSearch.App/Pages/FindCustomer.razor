@page "/findcustomer/{CustomerId}"

@using ModernFindSearch.Shared

<h3>Find Customer</h3>
<div><br/></div>
<table class="table">
    <thead>
        <tr>
            <th>Customer Name</th>
            <th>Category</th>
            <th>Customer Details</th>
        </tr>
    </thead>
    <tbody>
            <tr>
                <td>@customer.CustomerName</td>
                <td>@customer.CustomerCategory</td>
                <td>@customer.Street, @customer.City, @customer.PostCode </td>
            </tr>
    </tbody>
</table>

<a class="btn btn-outline-primary" @onclick="@NavigateToCustomerMenu">Customer Menu</a>

